<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="#FF5D2A"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="289dp"
                android:layout_height="38dp"
                android:text="Food Delivery"
                android:textColor="#FF5722"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for dishes and restuarants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Featured Dishes"
                android:textColor="#6A625F"
                android:textSize="18dp"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="172dp"
                    android:layout_height="122dp"
                    android:background="@drawable/first" />
                <ImageView
                    android:layout_width="172dp"
                    android:layout_height="122dp"
                    android:background="@drawable/second" />
                <ImageView
                    android:layout_width="172dp"
                    android:layout_height="122dp"
                    android:background="@drawable/third" />
                <ImageView
                    android:layout_width="172dp"
                    android:layout_height="122dp"
                    android:background="@drawable/forth" />
                <ImageView
                    android:layout_width="172dp"
                    android:layout_height="122dp"
                    android:background="@drawable/fifth" />

            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"/>




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burgers"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salads"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Popular Dishes Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Dishes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/first"

            android:layout_marginTop="8dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/second"

            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/third"

            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/forth"

            android:layout_marginTop="8dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/fifth"

            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>